<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/light_blue">

        <ImageView
            android:background="@drawable/btn_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_menu1"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_menu"
            android:clickable="true"
            android:onClick="onClick" />

        <ImageView
            android:background="@drawable/btn_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btn_create_remind2"
            android:layout_alignParentRight="true"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:clickable="true"
            android:src="@drawable/icon_plus"
            android:onClick="onClick" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="@string/app_title"
            android:id="@+id/textView"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray"
        android:paddingTop="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/corner_bg">

            <LinearLayout
                android:paddingLeft="17dp"
                android:paddingRight="17dp"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="4dp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_dot" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/main_dot" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/main_dot" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/main_dot" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/main_dot" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/main_dot" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/main_dot" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/main_dot" />

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/main_dot" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:layout_marginTop="24px"
                    android:layout_width="140dp"
                    android:layout_height="32dp"
                    android:background="@drawable/main_nav_bg"
                    android:layout_gravity="center_horizontal"
                    android:padding="1dp">

                    <Button
                        android:onClick="onClick"
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:text="我的"
                        android:textSize="14dp"
                        android:background="@drawable/corner_left_normal"
                        android:textColor="@color/light_blue"
                        android:id="@+id/btn_my1"
                        android:layout_alignParentLeft="true" />

                    <Button
                        android:onClick="onClick"
                        android:layout_width="70dp"
                        android:textSize="14dp"
                        android:layout_height="match_parent"
                        android:text="推荐"
                        android:background="@drawable/corner_right_active"
                        android:textColor="@color/white"
                        android:id="@+id/btn_recommend2"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <com.vikaa.lubbi.widget.UserRemindListView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"
                        android:id="@+id/recommendlist"
                        android:choiceMode="singleChoice" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</LinearLayout>