<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:layout_width="8dp"
        android:layout_height="50dp"
        android:background="@color/light_blue"
        android:id="@+id/remind_item_hd"/>

    <LinearLayout
        android:layout_marginLeft="40dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout">

        <TextView
            android:textColor="#333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哈哈啊啊啊哈"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="每天 18:00"
            android:id="@+id/time"
            android:textColor="@color/text_gray" />
    </LinearLayout>

    <TextView
        android:background="@drawable/btn_angle_bg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="+"
        android:textColor="@color/text_gray"
        android:gravity="center"
        android:clickable="true"
        android:id="@+id/create_sign"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/edit_remind"
        android:layout_toStartOf="@+id/edit_remind" />
    <ImageView
        android:clickable="true"
        android:id="@+id/edit_remind"
        android:background="@drawable/btn_angle_bg"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/delete_remind"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/delete_remind" />
    <TextView
        android:background="@drawable/btn_angle_bg"
        android:text="x"
        android:clickable="true"
        android:textColor="@color/text_gray"
        android:gravity="center"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/delete_remind"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>